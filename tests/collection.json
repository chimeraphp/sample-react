					"listen": "test",
					"script": {
						"id": "4deb9a7f-77b2-4c16-bca2-e6b096556927",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response body has correct structure\", function () {",
							"    var jsonData = pm.response.json();",
							"    ",
							"    pm.expect(jsonData).to.have.lengthOf(1);",
							"    pm.expect(jsonData[0].title).to.eql(pm.environment.get(\"book_title\"));",
							"    pm.expect(jsonData[0].author).to.eql(pm.environment.get(\"book_author\"));",
							"});",
							""
						],
						"type": "text/javascript"
					}
				}
