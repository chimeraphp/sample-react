					"script": {
						"id": "a4c644d8-31aa-4d05-9440-ca4a10e9d067",
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response body has correct structure\", function () {",
							"    var jsonData = pm.response.json();",
